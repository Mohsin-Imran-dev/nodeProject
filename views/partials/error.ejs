 <!-- Error Container - Beautiful notification box -->
            <% if (typeof errors !=='undefined' && errors && errors.length> 0) { %>
              <div
                class="mb-6 rounded-xl bg-linear-to-r from-red-50 to-orange-50 border-l-4 border-red-500 p-4 shadow-md animate-pulse">
                <div class="flex items-start">
                  <div class="shrink-0">
                    <svg class="h-5 w-5 text-red-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="ml-3 w-full">
                    <h3 class="text-sm font-bold text-red-800 mb-2">
                      Please fix the following errors:
                    </h3>
                    <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                      <% errors.forEach(function(error) { %>
                        <li class="flex items-center text-red-600">
                          <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-2"></span>
                          <%= error %>
                        </li>
                        <% }); %>
                    </ul>
                  </div>
                </div>
                <!-- Decorative progress bar -->
                <div class="mt-3 h-1 w-full bg-red-200 rounded-full overflow-hidden">
                  <div class="h-full bg-red-500 rounded-full animate-progress" style="width: 100%"></div>
                </div>
              </div>
              <% } %>