<%- include('../partials/head') %>
  </head>
  <body class="flex flex-col">
    <%- include('../partials/nav') %>
    <main class="pb-20">
    
    <h1 class="text-2xl text-center mt-5">Here are our registered Homes:</h1>
     <ul class="mt-6 grid grid-cols-1 md:grid-cols-4 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
      <% registeredHome.forEach((home) => { %>
      <li class="bg-white rounded-lg shadow-md hover:shadow-lg overflow-hidden transform cursor-pointer border-t-2 border-cyan-600 mx-auto my-0 w-[90%] md:w-full">
        <div class="relative h-40 overflow-hidden bg-gray-200">
        <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
        </div>
        <div class="p-4">
        <h2 class="text-base font-semibold text-gray-900"><%= home.houseName %></h2>
        <p class="text-gray-500 text-xs mt-1">ğŸ“ <%= home.location %></p>
        <div class="flex justify-between items-center mt-3 pt-3 border-t border-gray-100">
          <span class="text-lg font-bold text-cyan-600">Rs. <%= home.price %></span>
          <span class="flex items-center gap-1 bg-amber-50 text-amber-700 px-2 py-1 rounded text-xs font-medium">â­ <%= home.rating %></span>
        </div>
        <button class="mt-4 mb-3 w-full bg-cyan-600 cursor-pointer hover:bg-cyan-700 text-white font-semibold py-2 rounded-lg transition-all duration-200"><a href="/index/<%= home._id %>">Details</a></button>
        <%- include('../partials/favorite', {home: home})%>
        </div>
      </li>
      <% }); %>
    </ul>
      
    </main>
  </body>
</html>
